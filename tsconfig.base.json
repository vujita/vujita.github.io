{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "es2016", "es2015", "dom", "es2015.promise"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vubnguyen/classnames": ["libs/classnames/src/index.ts"],
      "@vubnguyen/styles": ["libs/styles/src/index.ts"],
      "@vubnguyen/styles/*": ["libs/styles/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
